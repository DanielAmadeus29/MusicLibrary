@page
@model MusicLibrary.Pages.AddSongModel
@{
    ViewData["Title"] = "Add Song";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/addsong.css" />
</head>

<div class="add-song-container">
    <h1>Add Song</h1>
    <form method="post" enctype="multipart/form-data">
        <div>
            <label for="Title">Title</label>
            <input id="Title" name="Title" type="text" value="@Model.Title" required />
        </div>
        <div>
            <label for="Artist">Artist</label>
            <input id="Artist" name="Artist" type="text" value="@Model.Artist" required />
        </div>
        <div>
            <label for="MusicFile">Music File</label>
            <input id="MusicFile" name="MusicFile" type="file" required />
        </div>
        <button type="submit">Add Song</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color: red;">@Model.ErrorMessage</p>
    }
</div>
